<div>
    {{#with main}}
   <main>
    <section>
        {{> title data="Work history" big=true}}
         <div>
            <ul>
                {{#each works}}
                 <li>
                    <div>{{position}}</div>

                    <br>

                    <div>
                              {{duration.from}} -
                         {{#if duration.to}}
                              {{duration.to}}
                         {{else}} 
                              (досі працюємо)
                         {{/if}}
                    </div>

                    <br>

                    <div>
                        {{#if company.url}}
                        {{> link text=company.name href=company.url blank=true noLine=true}}
                        {{else}}
                        <b>{{company.name}}</b>
                        {{/if}}
                    </div>

                    <br>
                    <br>

                    <div>
                        <strong> Projects ({{projectAmount}})</strong>
                    </div>

                    <br>

                    <div>
                    <ul>
                        {{#each projects}}
                        <li>
                        {{> link text=name href=url blank=true noLine=true}}
                                               
                    <br>

                    <div>
                        <p>{{about}}</p>
                    </div>

                    <br>

                    <div>
                        <em>Projeect stacks ({{stackAmount}})</em>
                    </div>

                    <br>

                    <div>
                    <ul>
                        {{#each stacks}}
                        <li>{{name}}</li>
                        {{/each}}
                    </ul>
                    </div>

                    <br>

                    <div>
                        <em>Project awards ({{awardAmount}})</em>
                    </div>

                    <br>

                    <div>
                       <ul>
                        {{#each awards}}
                        <li>{{name}}</li>
                        {{/each}}
                        </ul>
                    </div>
                 </li>
               {{/each}}
             </ul>
           </li>
          <br>
        {{/each}}
        </ul>
       </div>
      </section>
     </main>
   {{/with}}
</div>
    



