<div>
    {{#with main}}
   <main>
    <section>
        {{> title data="My education" big=true}}
        <ul>
            {{#each educations}}
            <li>
                {{name}} 
                {{#if isEnd}} (top) {{/if}}
                {{#unless isEnd}} (ще в процессі) {{/unless}}
                </li>
            {{/each}}
        </ul>
    </section>
    <section>
        {{> title data="My certificates" big=false}}
        <ul>
            {{#each certificates}}
            <li>
            {{name}} ({{ID}})
            </li>
            {{/each}}
        </ul>
    </section>
   </main>
   {{/with}}
</div>
    



